<Window x:Class="AllatokCsoportMunka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AllatokCsoportMunka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Allatok}" Width="600">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Név" Width="*"/>
                <DataGridTextColumn Header="Kontinens(ek)" Width="1.5*"/>
                <DataGridTextColumn Header="Élettartam" Width="*"/>
                <DataGridTextColumn Header="Táplálék" Width="*"/>
                <DataGridTextColumn Header="Osztály" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
